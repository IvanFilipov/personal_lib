# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

# C/C++ source files
[*.{c,h,cpp,hpp}]
indent_style = tab
indent_size = 4

# For python files apply some PEP-8 rules
[*.py]
indent_style = space
indent_size = 4
max_line_length = 119
